<?xml version="1.0" encoding="utf-8"?>
<Items>
  <Override>
    <Item identifier="clownmask">
      <inherit identifier="clownmask">
        <doinherit/>
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
      </inherit>
    </Item>
    <Item identifier="clowncostume">
      <inherit identifier="clowncostume">
        <doinherit/>
        <replace sel="./Wearable/sprite/@texture">
          clown.png
        </replace>
        <replace sel="./Wearable/sprite/@hidelimb">
          false
        </replace>
        <replace sel="./Wearable/sprite[@limb='LeftFoot' or @limb='RightFoot']/@hidelimb">
          true
        </replace>
        <!-- it seems original witd removed clown's foot step sounds. I'll assume it's intentional -->
        <del sel="./Wearable/sprite[@limb='LeftFoot' or @limb='RightFoot']/@sound"/>
      </inherit>
    </Item>
    <Item identifier="clownmaskunique">
      <inherit identifier="clownmaskunique">
        <doinherit/>
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Sprite/@sourcerect">
          414,391,89,80
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@sourcerect">
          414,391,89,80
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@origin">
          0.6236,0.806
        </replace>
      </inherit>
    </Item>
    <Item identifier="clownsuitunique">
      <inherit identifier="clownsuitunique">
        <doinherit/>
        <replace sel="./Wearable/sprite/@texture">
          clown_rare.png
        </replace>
        <replace sel="./Wearable/sprite[@limb='Torso' or @limb='RightHand' or @limb='LeftHand' or @limb='RightArm' or @limb='LeftArm' or @limb='RightForearm' or @limb='LeftForearm']/@hidelimb">
          false
        </replace>
        <replace sel="./Wearable/sprite[@limb='Torso']/@inheritorigin">
          false
        </replace>
        <replace sel="./Wearable/sprite[@limb='Torso']/@inheritsourcerect">
          false
        </replace>
        <add sel="./Wearable/sprite[@limb='Torso']/@sourcerect">
          160,0,112,192
        </add>
        <add sel="./Wearable/sprite[@limb='Torso']/@origin">
          0.6405527,0.5
        </add>
      </inherit>
    </Item>
  </Override>
</Items>