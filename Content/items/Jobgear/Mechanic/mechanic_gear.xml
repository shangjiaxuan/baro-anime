<?xml version="1.0" encoding="utf-8"?>
<Items>
  <Override>
    <!-- UNIFORMS START-->
    <Item identifier="bluejumpsuit1">
      <inherit identifier="bluejumpsuit1">
        <doinherit/>
        <del sel="./InventoryIcon"/>
        <add sel=".">
          <InventoryIcon name="Mechanic Uniform 1 Icon" texture="%ModDir%/Content/Items/Jobgear/OutfitIcons.png" sourcerect="256,198,128,99" origin="0.5,0.5" />
        </add>
        <replace sel="./Wearable/sprite/@texture">mechanic_1.png</replace>
        <replace sel="./Wearable/sprite/@hidelimb">false</replace>
        <replace sel="./Wearable/sprite[@limb='RightHand' or @limb='LeftHand' or @limb='RightForearm' or @limb='LeftForearm' or @limb='Waist' or @limb='LeftFoot' or @limb='RightFoot']/@hidelimb">
          true
        </replace>
      </inherit>
    </Item>
    <Item identifier="bluejumpsuit2">
      <inherit identifier="bluejumpsuit2">
        <doinherit/>
        <del sel="./InventoryIcon"/>
        <add sel=".">
          <InventoryIcon name="Mechanic Uniform 2 Icon" texture="%ModDir%/Content/Items/Jobgear/OutfitIcons.png" sourcerect="128,198,128,99" origin="0.5,0.5" />
        </add>
        <replace sel="./Wearable/sprite/@texture">mechanic_2.png</replace>
        <replace sel="./Wearable/sprite/@hidelimb">false</replace>
        <replace sel="./Wearable/sprite[@limb='RightForearm' or @limb='LeftForearm' or @limb='Waist' or @limb='LeftFoot' or @limb='RightFoot']/@hidelimb">
          true
        </replace>
      </inherit>
    </Item>
    <!-- UNIFORMS END -->
    <Item identifier="baseballcap">
      <inherit identifier="baseballcap">
        <doinherit/>
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Sprite/@sourcerect">
          313.5,322,92.5,48
        </replace>
        <replace sel="./Sprite/@origin">
          0.5,0.5
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@sourcerect">
          313.5,322,92.5,48
        </replace>
        <replace sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@origin">
          0.5,1.192
        </replace>
        <!-- Show hair -->
        <del sel="./Wearable[@limbtype='Head']/sprite[@limb='Head']/@hidewearablesoftype"/>
      </inherit>
    </Item>
  </Override>
</Items>