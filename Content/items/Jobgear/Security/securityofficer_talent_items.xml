<?xml version="1.0" encoding="utf-8"?>
<Items>
  <Override>
    <Item identifier="slipsuit">
      <inherit identifier="slipsuit">
        <doinherit/>
        <del sel="./Sprite"/>
        <add sel=".">
          <Sprite name="Slipsuit Item" texture="%ModDir%/Content/Items/Jobgear/Security/Slipsuit_Items.png" sourcerect="0,0,160,120" depth="0.55" origin="0.4625,0.5" />
        </add>
        <!-- item sprite on ground -->
        <replace sel="./Sprite/@texture">
          %ModDir%/Content/Items/Jobgear/Security/Slipsuit_Items.png
        </replace>
        <!-- contained sprite, Vertical Locker -->
        <replace sel="./ContainedSprite[@allowedcontainertags='divingsuitcontainervertical']/@texture">
          %ModDir%/Content/Items/Jobgear/Security/Slipsuit_Items.png
        </replace>
        <!-- contained sprite, Behind Window -->
        <replace sel="./ContainedSprite[@allowedcontainertags='divingsuitcontainerwindow']/@texture">
          %ModDir%/Content/Items/Jobgear/Security/slipsuit.png
        </replace>
        <!-- contained sprite, Horizontal Locker -->
        <replace sel="./ContainedSprite[@allowedcontainertags='divingsuitcontainerhorizontal']/@texture">
          %ModDir%/Content/Items/Jobgear/Security/Slipsuit_Items.png
        </replace>
        <!-- worn clothing sprites -->
        <!-- replace all first, then replace the head that stands out -->
        <replace sel="./Wearable/sprite/@texture">
          slipsuit.png
        </replace>
        <!-- head -->
        <replace sel="./Wearable/sprite[@limb='Head']/@texture">
          %ModDir%/Content/Items/Jobgear/headgears.png
        </replace>
        <replace sel="./Wearable/sprite[@limb='Head']/@origin">
          0.51,0.51
        </replace>
        <!--
        <del sel="./Wearable/StatusEffect/Sound"/>
        <add sel="./Wearable/StatusEffect">
          <Sound file="%ModDir%/Content/Items/Diving/DivingSuitLoop1.ogg" range="500" loop="true" />
          <Sound file="%ModDir%/Content/Items/Diving/DivingSuitLoop2.ogg" range="500" loop="true" />
        </add>
        -->
      </inherit>
    </Item>
    <Item identifier="bandolier">
      <inherit identifier="bandolier">
        <doinherit/>
        <del sel="./InventoryIcon"/>
        <add sel=".">
          <InventoryIcon texture="%ModDir%/Content/Items/JobGear/Security/SecurityVest.png" sourcerect="0,52,79,107" origin="0.45,0.5" />
        </add>
        <del sel="./Sprite"/>
        <add sel=".">
          <Sprite texture="%ModDir%/Content/Items/JobGear/Security/SecurityVest.png" sourcerect="0,52,79,107" depth="0.6" origin="0.5,0.5" />
        </add>
        <replace sel="./Wearable/@slots">OuterClothes,Bag</replace>
        <del sel="./Wearable/sprite"/>
        <add sel="./Wearable">
          <sprite name="Security Vest" texture="%ModDir%/Content/Items/JobGear/Security/SecurityVest.png" limb="Torso" hidelimb="false" sourcerect="0,52,79,118" inherittexturescale="true" origin="0.45,0.520338" />
        </add>
      </inherit>
    </Item>
  </Override>
</Items>